<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen ">
        <div class="form p-10 "> 
            <form action="/create" method="post">
                <input class="block w-full text-white rounded-md px-5 py-2 bg-zinc-800" type="text" placeholder="Title" name="title">
                <textarea class="block w-full text-white rounded-md mt-2 px-5 py-2 bg-zinc-800 resize-none" placeholder="Write your tasks details here" name="details"></textarea>
                <input class="mt-2 bg-blue-500 px-5 py-2 rounded-md text-white" type="submit" value="Create task">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if(files.length > 0 ) { %>
                <% files.forEach(function(val){ %>
                        <div class="task  w-72 px-3 py-4 bg-zinc-800 rounded-md">
                            <h1 class="text-white text-3xl tracking-tighter"> <%= val %> </h1>
                            <div class="flex w-full justify-between items-center">
                            <a class="text-blue-500 inline-block " href="/file/<%= val %>">Read more</a>
                            <a  class="text-zinc-600" href="/edit/<%= val %>">Edit</a>
                            </div>
                        </div>
             
            
                <% })  %>
            <% } else { %>
                    <h3 class="text-zinc-600">no tasks yet</h3>
            <% } %>
            
            
        </div>
    </div>

</body>
<script src="/javascripts/script.js"></script>
</html>